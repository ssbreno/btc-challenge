{
  "name": "btc-challenge",
  "version": "1.0.0",
  "description": "BTC Financial Challenge",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ignore-path .eslintignore . --ext .ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migrate:generate": "npm run typeorm -- -d ./ormconfig.ts migration:generate ./src/infrastructure/database/migrations/$npm_config_name",
    "migrate:run": "npm run typeorm migration:run -- -d ormconfig.ts",
    "migrate:revert": "npm run typeorm migration:revert -- -d ormconfig.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^16.18.68",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/pug": "^2.0.6",
    "@types/sinon": "^17.0.2",
    "@types/statuses": "^1.5.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "jest-sinon": "^1.1.0",
    "nodemon": "^3.0.2",
    "passport": "^0.6.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fastify/express": "^1.0.0",
    "axios": "^1.6.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "cache-manager": "^4.0.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "fastify": "^4.25.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^3.1.2",
    "node-mailjet": "^6.0.5",
    "passport-headerapikey": "^1.2.2",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.4.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.0",
    "pug": "^3.0.2",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "statuses": "^1.5.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*tests/.*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src",
      "tests"
    ],
    "setupFilesAfterEnv": [
      "jest-sinon"
    ]
  }
}
